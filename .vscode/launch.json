{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CustomVonNeumannMachine",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/CustomVonNeumannMachine",
            "args": ["outputs2/outioop.bin", "outputs2/outsumdec.bin", "FCFS"], // Add arguments if needed
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
